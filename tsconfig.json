{
  "compilerOptions": {
    "target": "es2021",
    "useDefineForClassFields": true,
    "module": "es2020",
    "lib": ["es2021", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationDir": "./dist"
  },
  "include": ["./src"]
}
